@using MMB_ASPNET.Models
@model Player

@{
    ViewData["Title"] = "New Player";
}

<h2>Create a New Player</h2>
@using (Html.BeginForm("InsertPlayerToDatabase", "Player", "Post"))
{
    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" id="input" name="Name" class="form-control" value="" autocomplete="off"
    pattern="([a-zA-Z0-9]+\s?)*$" minlength="1" maxlength="15" title="Name can only include: a-z A-Z 0-9 and single spaces. ex: l33Tname M4ster."
    onchange="this.value = this.value.trim()"/>
    <br>
    <input type="submit" id="button" value="Create Player" class="btn btn-primary" disabled/>
}
 <script>
    let input = document.getElementById("input");
    let btn = document.getElementById("button");

    input.addEventListener("input", function(){
        btn.disabled = (this.value === '');
    })
 </script>